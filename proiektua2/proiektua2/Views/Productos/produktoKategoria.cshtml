
@model IEnumerable<proiektua2.Models.Producto>
<a>
    Kategoriak
</a>
<ul class="navbar-nav flex-grow-1">

    <li class="nav-item">

        @{var izena2 = "";
            foreach (var item in Model)
            {
                if (item.Categoria.Nombre != izena2)
                {
                    <button class="dropdown-item"><a class="nav-link text-dark" asp-area="" asp-controller="productos" asp-action="categoriaProductuak" asp-route-id="@item.Categoriaid">@Html.DisplayFor(modelItem => item.Categoria.Nombre)</a></button>

                    izena2 = item.Categoria.Nombre;
                }
            }
        }
    </li>
</ul>

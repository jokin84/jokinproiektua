@model IEnumerable<proiektua2.Models.BezeroaEskaera>

@{
    ViewData["Title"] = "pedidosUsuarios";
}

<h1>pedidosUsuarios</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Izena)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Abizena)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Helbidea)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Hiria)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Herrialdea)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Postakodea)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Telefonoa)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @{
            foreach (var item in Model)
            {


                if (item.Erabiltzaileaid.Equals(AdminDbContext.user.idusuario))
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.Izena)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Abizena)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Helbidea)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Hiria)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Herrialdea)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Postakodea)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Telefonoa)
                        </td>
                        <td>
                            <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                            <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                            <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
                        </td>
                    </tr>
                    }
                }
            }
        </tbody>
</table>

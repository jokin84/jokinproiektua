@model IEnumerable<proiektua2.Models.Saskia>

@{
    ViewData["Title"] = "Index";
}
@{

    if (AdminDbContext.user.tipo == "admin")
    {
        <h1>Index</h1>

        <p>
            <a asp-action="Create">Create New</a>
        </p>
        <table class="table">
            <thead>
                <tr>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            <a asp-action="Edit" asp-route-id="@item.SaskiaId">Edit</a> |
                            <a asp-action="Details" asp-route-id="@item.SaskiaId">Details</a> |
                            <a asp-action="Delete" asp-route-id="@item.SaskiaId">Delete</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
        }
    }